---
const { ...item } = Astro.props;
import ImagePB from "./ImagePB.astro";
console.log(item);
import Button from "./Button.astro";

import { formatDate } from "../../backend/herlpers.js";
---

<div
  class="flex flex-col items-start gap-4 p-6 mt-6 mx-4 bg-white/10 rounded-2xl shadow-md"
>
  <ImagePB
    record={item}
    field="affiche"
    alt={item.titre}
    classPicture="w-full h-full object-cover rounded-t-2xl"
    classImg="w-full h-full object-cover rounded-t-2xl"
  />

  <h3 class="text-3xl font-bold text-white mt-4">{item.titre}</h3>

  <p class="text-gris">{formatDate(item.date)}</p>

  <p class="text-cyan-400">{item.genre}</p>

  <p class="my-2 text-white">{item.description}</p>

  <Button text="voir plus" url=`/films/${item.id}` />
</div>
