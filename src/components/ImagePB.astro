---
import { Picture } from "astro:assets";
import { pb } from "../../backend/backend.mjs";
const {
  record,
  field = "imgUrl",
  alt,
  classPicture,
  classImg,
  thumb = "1024x1024",
} = Astro.props;

const imageUrl = record?.[field]
  ? pb.files.getURL(record, record[field], { thumb })
  : null;
---

{
  imageUrl && (
    <img
      class={classImg}
      class={classPicture}
      alt={alt || "Image"}
      src={imageUrl}
    />
  )
}
