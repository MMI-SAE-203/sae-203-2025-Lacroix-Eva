---
const { ...item } = Astro.props;
import ImagePB from "./ImagePB.astro";
import Button from "./Button.astro";
import { formatDate } from "../../backend/herlpers.js";
---

<div
  class="flex flex-col items-start gap-4 p-6 mt-6 mx-4 bg-white/10 rounded-2xl shadow-md"
>
  <h3 class="text-3xl font-bold text-white mt-4">{item.titre}</h3>

  <p class="text-gris">{formatDate(item.date)}</p>

  <Button text="Voir plus" url={`/activites/${item.id}`} />
</div>
